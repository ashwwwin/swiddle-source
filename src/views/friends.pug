    #my-friends-list.row(style="flex-direction: row;")
      div
        h3.font-weight-bold(style="color:#34c8ed;") My Friends
        
      div.w-100.mt-3
        div(style="overflow-y: auto; flex-direction: column; display: flex; position: relative;")
          .col-6.friend-item-clone.d-none.mb-4
            .d-flex.flex-column.align-items-center.p-3(style="background: #FAFAFA; border-radius: 20px; margin: auto;")
              .position-relative.friend-avatar
                span.network-state.off-line
              h5.mt-2.mb-3.font-weight-bold.player-name(style="text-overflow: ellipsis; white-space: nowrap; overflow: hidden; font-size: 18px;") Philip
