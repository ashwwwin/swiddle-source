                span.ring-friend(data-toggle="tooltip", title="Ring", data-placement="bottom")
                  i.fa.fa-home
                span.chat-friend(data-toggle="tooltip", title="Chat", data-placement="bottom")
                  i.fa.fa-comment-alt
                span.invite-friend(data-toggle="tooltip", title="Invite home", data-placement="bottom")
                  i.fa.fa-angle-double-left
                span.remove-friend(data-toggle="tooltip", title="Remove friend", data-placement="bottom")
                  i.fa.fa-ban

    #add-friend-request-container.d-none
      h3.font-weight-bold(style="color:#34c8ed;") Add Friends
      .d-flex
        div(class="d-flex flex-column align-items-center")
          div.input-group.align-items-center
            input(type="text" autocomplete="off" class="form-control text-center my-2 mr-2" placeholder="Username" style="height: 30px; border-radius: 15px; width: 200px; border: none; background: #F4F4F4;" id="add-friend-username")
            button(class="btn btn-success btn-sm px-4" style="height: 30px; border-radius: 15px;" id="add-friend-by-name") Add
          div#no-friends-add-text.d-none.mt-2
            a(style="color: #000;") Add friends to chat, play games & invite them home!
          div.d-none(id="pending-requests-count" class="font-weight-bold text-primary text-center mt-4") Pending friend requests (
            span(id="pending-request-count") 0
            span() )
          div(id="pending-requests-list" class="d-flex flex-column w-100 mt-2")
            div(class="pending-request-item-clone d-none justify-content-between mb-2")
              div(class="d-flex align-items-center")
                div(class="position-relative friend-avatar")
                  //- span(class="network-state on-line")
                span(class="ml-2 font-weight-bold player-name") Philip
              div(class="d-flex align-items-center mr-3")
                span(class="text-success accept-friend")
                  i(class="fa fa-check")
                span(class="text-danger ml-1 ignore-friend")
                  i(class="fa fa-ban")
          div(id="friend-suggestions-title-text" class="font-weight-bold text-primary text-center mt-4 mb-2 d-none") People you might know
          div(id="mutual-friends-list" class="d-flex flex-column w-100 mt-2")
 
